@inherits LayoutComponentBase
@inject CoffeeServices CoffeServices


<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    @* including body *@
    <CascadingValue Value="this">
        <CascadingValue Value="_globalState">
            @Body
        </CascadingValue>
    </CascadingValue>
</MudLayout>

@code{
    private GlobalState _globalState = new();
    protected override void OnInitialized()
    {
        CoffeServices.SeedCoffeeDetails();
    }
}