@inherits LayoutComponentBase
@inject CoffeeServices CoffeeServices
@inject AddOnsService AddOnsService

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    @* including body *@
    <CascadingValue Value="this">
        <CascadingValue Value="_globalState">
            @Body
        </CascadingValue>
    </CascadingValue>
</MudLayout>

@code{
    private GlobalState _globalState = new();
    protected override void OnInitialized()
    {
        CoffeeServices.SeedCoffeeDetails();
        AddOnsService.SeedAddOnDetails();
    }
}